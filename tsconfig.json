{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"resolveJsonModule": true,
		"baseUrl": ".",
		"isolatedModules": true,
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"@/*": ["./src/*"],
			"@assets": ["./src/assets"],
			"@styles/*": ["./src/styles/*"],
			"@lib": ["./src/lib"],
			"@ui": ["./src/ui"]
		}
	},
	"include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
